{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "*" : [
        "typings/*",
        "*"
      ]
    },
    "typeRoots": [
      "./typings"
    ],
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist/",
    "experimentalDecorators": true
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": ["node_modules"],
  "files": [
    "src/index.ts"
  ]
}
